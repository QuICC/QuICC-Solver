@PACKAGE_INIT@

# Find dependencies
if("@QUICC_BESSEL_IMPL@" STREQUAL "Boost")
   find_package(Boost REQUIRED)
endif()

# Force some project variables to match framework
set(QUICC_MPIALGO "@QUICC_MPIALGO@"
  CACHE STRING "This is set by the framework" FORCE)
set(QUICC_MULTPRECISION @QUICC_MULTPRECISION@
  CACHE BOOL "This is set by the framework" FORCE)

# Hide them since they should not be changed
mark_as_advanced(FORCE QUICC_MPIALGO QUICC_MULTPRECISION)

# Setup
include(setup/global)

# Framework setup
include(setup/Framework)

# Order is important!
set(_quicc_components
  Profiling_Interface
  Profiling_Timers
  Profiling
  quicc_common
  quicc_polynomial_Bessel
  quicc_polynomial
  quicc_sparsesm
  quicc_transform
  quicc_pyquicc
  quicc_io
  quicc_framework
  )

# Include all components
foreach(_comp ${_quicc_components})
  include("${CMAKE_CURRENT_LIST_DIR}/${_comp}Targets.cmake")
endforeach()

